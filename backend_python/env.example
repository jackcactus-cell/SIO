# =================================================================
# Configuration Backend Python (FastAPI + Oracle)
# Copiez ce fichier en .env dans le même dossier
# =================================================================

# ==============================
# Configuration Oracle Database
# ==============================
ORACLE_HOST=oracle-db
ORACLE_PORT=1521
ORACLE_SERVICE_NAME=XE
ORACLE_USERNAME=audit_user
ORACLE_PASSWORD=your_secure_password_here
ORACLE_DSN=oracle-db:1521/XE

# Pool de connexions Oracle
ORACLE_MIN_POOL_SIZE=2
ORACLE_MAX_POOL_SIZE=10
ORACLE_POOL_INCREMENT=1
ORACLE_CONNECTION_TIMEOUT=30

# ==============================
# Configuration MongoDB
# ==============================
MONGODB_URI=mongodb://admin:securepassword123@mongodb:27017/audit_146?authSource=admin
MONGODB_DATABASE=audit_146
MONGODB_COLLECTION=actions_audit

# ==============================
# Configuration FastAPI
# ==============================
APP_NAME="SIO Audit Backend Python"
APP_VERSION=1.0.0
DEBUG=false
API_PREFIX=/api/v1

# Configuration CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost"]

# ==============================
# Configuration sécurité
# ==============================
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================
# Configuration des logs
# ==============================
LOG_LEVEL=INFO
LOG_FORMAT=detailed
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# ==============================
# Configuration cache Redis (optionnel)
# ==============================
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# ==============================
# Configuration OpenAI (optionnel)
# ==============================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# ==============================
# Configuration NLP
# ==============================
SPACY_MODEL=fr_core_news_sm
NLP_CACHE_SIZE=1000

# ==============================
# Configuration développement
# ==============================
ENVIRONMENT=production
RELOAD=false
WORKERS=1


