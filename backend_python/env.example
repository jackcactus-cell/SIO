# =============================================================================
# Configuration SIO - Backend Python
# =============================================================================

# =============================================================================
# Configuration Oracle Database
# =============================================================================

# Hôte de la base de données Oracle
ORACLE_HOST=localhost

# Port de la base de données Oracle (défaut: 1521)
ORACLE_PORT=1521

# Nom du service Oracle (défaut: XE)
ORACLE_SERVICE_NAME=XE

# Nom d'utilisateur Oracle
ORACLE_USERNAME=audit_user

# Mot de passe Oracle (à remplacer par votre mot de passe)
ORACLE_PASSWORD=your_secure_password_here

# =============================================================================
# Configuration MongoDB
# =============================================================================

# URI de connexion MongoDB
MONGODB_URI=mongodb://admin:securepassword123@mongodb:27017/

# Nom de la base de données MongoDB
MONGODB_DB_NAME=audit_db

# Nom d'utilisateur MongoDB (optionnel)
MONGODB_USERNAME=audit_user

# Mot de passe MongoDB (optionnel)
MONGODB_PASSWORD=audit_password_123

# =============================================================================
# Configuration de l'application
# =============================================================================

# Mode de débogage (true/false)
DEBUG=false

# Niveau de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Clé secrète pour les sessions (à générer)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Port du serveur (défaut: 8000)
PORT=8000

# Nombre de workers (défaut: 1)
WORKERS=1

# =============================================================================
# Configuration de sécurité
# =============================================================================

# Origines autorisées pour CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost

# Taille maximale des fichiers uploadés (en bytes)
MAX_FILE_SIZE=10485760

# Timeout des connexions (en secondes)
CONNECTION_TIMEOUT=30

# =============================================================================
# Configuration des logs
# =============================================================================

# Répertoire des logs
LOG_DIR=logs

# Niveau de détail des logs Oracle
ORACLE_LOG_LEVEL=INFO

# Activer les logs de requêtes SQL (true/false)
SQL_LOGGING=false

# =============================================================================
# Configuration du cache
# =============================================================================

# Répertoire du cache
CACHE_DIR=cache

# TTL du cache en secondes (défaut: 3600)
CACHE_TTL=3600

# Taille maximale du cache en MB
CACHE_MAX_SIZE=100

# =============================================================================
# Configuration des notifications
# =============================================================================

# Activer les notifications par email (true/false)
EMAIL_NOTIFICATIONS=false

# Serveur SMTP
SMTP_HOST=smtp.gmail.com

# Port SMTP
SMTP_PORT=587

# Email d'envoi
SMTP_USER=your-email@gmail.com

# Mot de passe SMTP
SMTP_PASSWORD=your-app-password

# =============================================================================
# Configuration des métriques
# =============================================================================

# Activer les métriques (true/false)
METRICS_ENABLED=true

# Intervalle de collecte des métriques (en secondes)
METRICS_INTERVAL=60

# =============================================================================
# Configuration du monitoring
# =============================================================================

# Activer le monitoring de santé (true/false)
HEALTH_CHECK_ENABLED=true

# Intervalle des health checks (en secondes)
HEALTH_CHECK_INTERVAL=30

# Timeout des health checks (en secondes)
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# Configuration des sauvegardes
# =============================================================================

# Activer les sauvegardes automatiques (true/false)
AUTO_BACKUP_ENABLED=true

# Répertoire des sauvegardes
BACKUP_DIR=backups

# Rétention des sauvegardes (en jours)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# Configuration des tests
# =============================================================================

# Activer les tests automatiques (true/false)
AUTO_TESTS_ENABLED=false

# Répertoire des rapports de tests
TEST_REPORTS_DIR=test_reports

# =============================================================================
# Configuration du développement
# =============================================================================

# Activer le mode développement (true/false)
DEVELOPMENT_MODE=false

# Activer le hot reload (true/false)
HOT_RELOAD=false

# Activer les logs de débogage (true/false)
DEBUG_LOGGING=false


